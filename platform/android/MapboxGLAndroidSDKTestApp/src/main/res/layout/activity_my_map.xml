<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.mapbox.mapboxsdk.testapp.activity.annotation.MyMapActivity">

    <com.mapbox.mapboxsdk.maps.MapView
        android:id="@+id/map_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:mapbox_cameraTargetLat="40"
        app:mapbox_cameraTargetLng="116"
        app:mapbox_cameraZoom="10"
        />
    <Button
        android:id="@+id/btn_switch_map_type"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:text="换"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        />
    <Button
        android:id="@+id/btn_query_features"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:text="查"
        android:layout_alignParentBottom="true"
        />

    <ListView
        android:id="@+id/list_village"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        android:visibility="gone"/>
</RelativeLayout>
